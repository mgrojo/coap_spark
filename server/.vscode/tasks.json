{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
         {
            "label": "Open in Emacs",
            "type": "process",
            "command": "emacs",
            "args": [
                "${file}"
            ]
        },
        {
            "type": "spark",
            "command": "alr",
            "args": [
                "exec",
                "--",
                "gnatprove",
                "${command:ada.gprProjectArgs}",
                "-j0",
                "--level=4",
                "-cargs",
                "-gnatef"
            ],
            "problemMatcher": [
                "$ada"
            ],
            "label": "spark: Prove project"
        }
    ]
}