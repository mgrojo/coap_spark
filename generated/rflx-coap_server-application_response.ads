   function Field_First_Options_And_Payload_Length (Cursors : Field_Cursors; First : RFLX_Types.Bit_Index; Verified_Last : RFLX_Types.Bit_Length; Written_Last : RFLX_Types.Bit_Length) return RFLX_Types.Bit_Index'Base is
     (First + 24)
    with
     Pre =>
       Cursors_Invariant (Cursors, First, Verified_Last)
       and then Valid_Predecessors_Invariant (Cursors, First, Verified_Last, Written_Last)
       and then Valid_Next_Internal (Cursors, First, Verified_Last, Written_Last, F_Options_And_Payload_Length);

   function Field_First_Options_And_Payload_Options_And_Payload (Cursors : Field_Cursors; First : RFLX_Types.Bit_Index; Verified_Last : RFLX_Types.Bit_Length; Written_Last : RFLX_Types.Bit_Length) return RFLX_Types.Bit_Index'Base is
     (First + 40)
    with
     Pre =>
       Cursors_Invariant (Cursors, First, Verified_Last)
       and then Valid_Predecessors_Invariant (Cursors, First, Verified_Last, Written_Last)
       and then Valid_Next_Internal (Cursors, First, Verified_Last, Written_Last, F_Options_And_Payload_Options_And_Payload);

   function Field_First_Internal (Cursors : Field_Cursors; First : RFLX_Types.Bit_Index; Verified_Last : RFLX_Types.Bit_Length; Written_Last : RFLX_Types.Bit_Length; Fld : Field) return RFLX_Types.Bit_Index'Base is
     ((case Fld is
          when F_Message_Class =>
             Field_First_Message_Class (Cursors, First, Verified_Last, Written_Last),
          when F_Success_Code =>
             Field_First_Success_Code (Cursors, First, Verified_Last, Written_Last),
          when F_Client_Error_Code =>
             Field_First_Client_Error_Code (Cursors, First, Verified_Last, Written_Last),
          when F_Server_Error_Code =>
             Field_First_Server_Error_Code (Cursors, First, Verified_Last, Written_Last),
          when F_Padding =>
             Field_First_Padding (Cursors, First, Verified_Last, Written_Last),
          when F_Options_And_Payload_Length =>
             Field_First_Options_And_Payload_Length (Cursors, First, Verified_Last, Written_Last),
          when F_Options_And_Payload_Options_And_Payload =>
             Field_First_Options_And_Payload_Options_And_Payload (Cursors, First, Verified_Last, Written_Last)))
    with
     Pre =>
       Cursors_Invariant (Cursors, First, Verified_Last)
       and then Valid_Predecessors_Invariant (Cursors, First, Verified_Last, Written_Last)
       and then Valid_Next_Internal (Cursors, First, Verified_Last, Written_Last, Fld),
     Post =>
       True;

