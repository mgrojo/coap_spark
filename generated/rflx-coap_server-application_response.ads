   function Well_Formed_Message (Ctx : Context) return Boolean is
     (Well_Formed (Ctx, F_Options_And_Payload_Options_And_Payload));

   function Valid_Message (Ctx : Context) return Boolean is
     (Valid (Ctx, F_Options_And_Payload_Options_And_Payload));

   function Incomplete_Message (Ctx : Context) return Boolean is
     ((for some F in Field =>
          Incomplete (Ctx, F)));

   function Get_Message_Class (Ctx : Context) return RFLX.CoAP.Code_Class is
     (To_Actual (Ctx.Cursors (F_Message_Class).Value));

   function Get_Success_Code (Ctx : Context) return RFLX.CoAP.Success_Response is
     (To_Actual (Ctx.Cursors (F_Success_Code).Value));

   function Get_Client_Error_Code (Ctx : Context) return RFLX.CoAP.Client_Error_Response is
     (To_Actual (Ctx.Cursors (F_Client_Error_Code).Value));

   function Get_Server_Error_Code (Ctx : Context) return RFLX.CoAP.Server_Error_Response is
     (To_Actual (Ctx.Cursors (F_Server_Error_Code).Value));

   function Get_Padding (Ctx : Context) return RFLX.CoAP_Server.Unused_6 is
     (To_Actual (Ctx.Cursors (F_Padding).Value));

   function Get_Options_And_Payload_Length (Ctx : Context) return RFLX.CoAP.Length_16 is
     (To_Actual (Ctx.Cursors (F_Options_And_Payload_Length).Value));

   function Valid_Size (Ctx : Context; Fld : Field; Size : RFLX_Types.Bit_Length) return Boolean is
     (Size = Field_Size (Ctx, Fld))
    with
     Pre =>
       RFLX.CoAP_Server.Application_Response.Valid_Next (Ctx, Fld);

   function Valid_Length (Ctx : Context; Fld : Field; Length : RFLX_Types.Length) return Boolean is
     (Valid_Size (Ctx, Fld, RFLX_Types.To_Bit_Length (Length)));

   function Context_Cursor (Ctx : Context; Fld : Field) return Field_Cursor is
     (Ctx.Cursors (Fld));

   function Context_Cursors (Ctx : Context) return Field_Cursors is
     (Ctx.Cursors);

   function Context_Cursors_Index (Cursors : Field_Cursors; Fld : Field) return Field_Cursor is
     (Cursors (Fld));

   function Valid_Structure (Unused_Struct : Structure) return Boolean is
     (True);

   function Sufficient_Buffer_Length (Ctx : Context; Struct : Structure) return Boolean is
     (RFLX_Types.Base_Integer (RFLX_Types.To_Last_Bit_Index (Ctx.Buffer_Last) - RFLX_Types.To_First_Bit_Index (Ctx.Buffer_First) + 1) >= RFLX_Types.Base_Integer (Struct.Options_And_Payload_Length) * 8 + 40);

   function Field_Size_Message_Class (Struct : Structure) return RFLX_Types.Bit_Length is
     (3);

   function Field_Size_Success_Code (Struct : Structure) return RFLX_Types.Bit_Length is
     (5);

   function Field_Size_Client_Error_Code (Struct : Structure) return RFLX_Types.Bit_Length is
     (5);

   function Field_Size_Server_Error_Code (Struct : Structure) return RFLX_Types.Bit_Length is
     (5);

   function Field_Size_Padding (Struct : Structure) return RFLX_Types.Bit_Length is
     (6);

   function Field_Size_Options_And_Payload_Length (Struct : Structure) return RFLX_Types.Bit_Length is
     (16);

   function Field_Size_Options_And_Payload_Options_And_Payload (Struct : Structure) return RFLX_Types.Bit_Length is
     (RFLX_Types.Bit_Length (Struct.Options_And_Payload_Length) * 8);

